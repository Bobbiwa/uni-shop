/* 水平间距 */
.settle-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: white;
  font-size: 28rpx;
  padding-left: 10rpx;
}
.settle-container .radio {
  display: flex;
  align-items: center;
}
.settle-container .amount-box .amount {
  color: #C00000;
  font-weight: bold;
}
.settle-container .settle-btn {
  background-color: #C00000;
  height: 100rpx;
  color: white;
  line-height: 100rpx;
  padding: 0 20rpx;
  min-width: 200rpx;
  text-align: center;
}

