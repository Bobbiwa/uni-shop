/* 水平间距 */
.search-container {
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 999;
}
.sugg-container {
  padding: 0 10rpx;
}
.sugg-container .sugg-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  padding: 26rpx 0;
  border-bottom: 2rpx solid #efefef;
}
.sugg-container .sugg-item .good-name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-right: 6rpx;
}
.history-container {
  padding: 0 10rpx;
}
.history-container .history-title {
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  align-items: center;
  font-size: 26rpx;
  border-bottom: 2rpx solid #efefef;
}
.history-container .history-item {
  display: flex;
  flex-wrap: wrap;
}
.history-container .history-item .uni-tag {
  margin-top: 10rpx;
  margin-right: 10rpx;
}

