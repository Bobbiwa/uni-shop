/* 水平间距 */
.goods-detail-container {
  padding-bottom: 50px;
}
.goods-detail-container swiper {
  height: 750rpx;
}
.goods-detail-container swiper image {
  width: 100%;
  height: 100%;
}
.goods-detail-container .goods-info-container {
  padding: 20rpx;
  padding-right: 0;
}
.goods-detail-container .goods-info-container .price {
  color: #C00000;
  font-size: 36rpx;
  margin: 20rpx 0;
}
.goods-detail-container .goods-info-container .goods-info-body {
  display: flex;
  justify-content: space-between;
}
.goods-detail-container .goods-info-container .goods-info-body .goods-title {
  font-size: 26rpx;
  margin-right: 20rpx;
}
.goods-detail-container .goods-info-container .goods-info-body .goods-favi {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 240rpx;
  font-size: 24rpx;
  border-left: 2rpx solid #efefef;
  color: gray;
}
.goods-detail-container .goods-info-container .express {
  font-size: 24rpx;
  color: gray;
  margin: 20rpx 0;
}
.goods-detail-container .goods-carts {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}

